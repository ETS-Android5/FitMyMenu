<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="3dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="11dp">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/img_delete_meal"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="7dp"
                android:gravity="center"
                android:src="@drawable/ic_delete_red"
                />

            <TextView
                android:layout_marginTop="5sp"
                android:id="@+id/txtVwTitle"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="#222222"
                android:text="name meal"
                android:textSize="18sp" />

            <RelativeLayout

                android:id="@+id/relativeLayout"
                android:layout_below="@+id/txtVwTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top">


                <!-- put border for the image-->
                <ImageView
                    android:id="@+id/img_myMeal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"

                   />
            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_cal_des"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                android:gravity="center"

                android:id="@+id/txtVwCalories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="calories"
                android:textStyle="bold"
                android:textColor="#222222"
                android:textSize="14sp" />
            <!--    android:textColor="#808080" -->
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/txtVwCalories"
                android:id="@+id/txtVwIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:text="Ingredients"
                android:textColor="#222222"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/txtVwIngredients"
                android:id="@+id/txtVwDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="desc"
                android:textColor="#222222"
                android:textSize="15sp" />
        </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>